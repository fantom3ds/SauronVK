<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Проект "Саурон"</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="Sauronheader">
        <div id="head-link" class="Sauronheader-links">
            @Html.ActionLink("Проект \"Саурон\"", "Index", "Home")
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="Sauronheader-links user-link">
                Здравствуйте, @Html.ActionLink(User.Identity.Name, "PrivateOffice", "Home")
                <a href="/Account/Logout" class="navbar-brand">(Выход)</a>
            </div>
        }
        else
        {
            <div class="Sauronheader-links">
                <a href="@Url.Action("Signup", "Users")" class="right">Регистрация</a>
            </div>

        }
    </div>



    <div class="Sauroncontainer">
        @RenderBody()
        <hr />
    </div>

    <div class="Sauronfooter">
        <p>&copy; @DateTime.Now.Year - Project "Sauron"</p>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>